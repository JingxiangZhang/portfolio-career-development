@model portfolio_career_development.Models.Webinar

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="mt-5 my-5 pt-3 py-3">
    <section class="page-section" id="articleDelete">
        <div class="container">
            <div class="form-horizontal">

                <h3 class="page-section-heading text-center text-uppercase text-secondary mb-0">Details of the Course</h3>
                <div class="divider-custom">
                    <div class="divider-custom-line"></div>
                    <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                    <div class="divider-custom-line"></div>
                </div>

                <hr />

                <div class="row">
                    <div class="col-lg-12 mx-auto">
                        <div>

                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.LabelFor(model => model.Topic, new { @class = "mr-sm-5 ml-sm-5 mx-sm-5 text-left" })
                                </dt>

                                <dd>

                                    <span class="mr-sm-5 ml-sm-5 mx-sm-5 text-left">
                                        @Html.DisplayFor(model => model.Topic)
                                    </span>

                                </dd>

                                <dt>
                                    @Html.LabelFor(model => model.About, new { @class = "mr-sm-5 ml-sm-5 mx-sm-5 text-left" })
                                </dt>

                                <dd>
                                    <span class="mr-sm-5 ml-sm-5 mx-sm-5 text-left">
                                        @Html.DisplayFor(model => model.About)
                                    </span>
                                </dd>

                                <dt>
                                    @Html.LabelFor(model => model.CoursePrice, new { @class = "mr-sm-5 ml-sm-5 mx-sm-5 text-left" })
                                </dt>

                                <dd>
                                    <span class="mr-sm-5 ml-sm-5 mx-sm-5 text-left">
                                        @Html.DisplayFor(model => model.CoursePrice)
                                    </span>
                                </dd>


                                <dt>
                                    @Html.LabelFor(model => model.DateWebinar, new { @class = "mr-sm-5 ml-sm-5 mx-sm-5 text-left" })
                                </dt>

                                <dd>
                                    <span class="mr-sm-5 ml-sm-5 mx-sm-5 text-left">
                                        @Html.DisplayFor(model => model.DateWebinar)
                                    </span>
                                </dd>

                            </dl>

                            <a class="btn btn-success btn-lg" href=@Url.Action("Index") role="button">
                                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-left-circle-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-4.5.5a.5.5 0 0 0 0-1H5.707l2.147-2.146a.5.5 0 1 0-.708-.708l-3 3a.5.5 0 0 0 0 .708l3 3a.5.5 0 0 0 .708-.708L5.707 8.5H11.5z" />
                                </svg>
                                Back to Courses List
                            </a>


                        </div>
                    </div>
                </div>

            </div>



        </div>
    </section>
</div>

