@model IEnumerable<portfolio_career_development.Models.Article>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="mt-5 my-5 pt-3 py-3">
<section class="page-section" >
    <div class="container">

        <div>
            <a class="btn btn-info btn-xl ml-5 mx-5" href=@Url.Action("Create")> Create New Article</a>
        </div>
        <br /><br />
        <hr />
        <br />
        
        @if (!Model.Any())
        {
            <h4 class="page-section-heading text-center text-uppercase text-secondary mb-0">We don't have any Articles yet.</h4>
               
        }
        else
        {
            <div class="row">
                <table class="table">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img class="col-md-3 mt-2 my-2" src="~/Content/Images/career.png" alt="" />
                            </td>
                            <td style="min-width: 200px">
                                @Html.DisplayFor(modelItem => item.Title, new { @class = "control-label col-md-2 mt-2 my-2 text-left" })
                            </td>
                            <td>
                            <a class="btn btn-info btn-sm mt-2 my-2 btn-block" style="min-width: 100px"
                                       href=@Url.Action("Edit", "Articles", new {id = item.Id})>
                                        <i class="fas fa-edit mr-2" aria-hidden="true"></i>
                                        Edit
                                    </a>
                            </td>
                            <td>
                                <a class="btn btn-primary btn-sm mt-2 my-2" style="min-width: 100px"
                                   href=@Url.Action("Details", "Articles", new {id = item.Id})>
                                    <i class="fas fa-info-circle mr-2" aria-hidden="true"></i>
                                    Details
                                </a>
                            </td>
                            <td>
                                <a class="btn btn-danger btn-sm mt-2 my-2" style="min-width: 100px"
                                   href=@Url.Action("Delete", "Articles", new {id = item.Id})>
                                    <i class="fas fa-trash-alt mr-2" aria-hidden="true"></i>
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        }
    </div>
</section>
</div>



