@model portfolio_career_development.Models.Article

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-5 my-5 pt-3 py-3">
    <section class="page-section" id="articleDelete">
        <div class="container">
            <div class="form-horizontal">
                
                <h4 class="page-section-heading text-center text-uppercase text-secondary mb-0">Are you sure you want to delete this ?</h4>
                <div class="divider-custom">
                    <div class="divider-custom-line"></div>
                    <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                    <div class="divider-custom-line"></div>
                </div>

                <hr />

                <div class="row">
                    <div class="col-lg-12 mx-auto">
                        <div>

                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.LabelFor(model => model.Title, new { @class = "mr-sm-5 ml-sm-5 mx-sm-5 text-left" })
                                </dt>

                                <dd>

                                    <span class="mr-sm-5 ml-sm-5 mx-sm-5 text-left">
                                        @Html.DisplayFor(model => model.Title)
                                    </span>

                                </dd>

                                <dt>
                                    @Html.LabelFor(model => model.Content, new { @class = "mr-sm-5 ml-sm-5 mx-sm-5 text-left" })
                                </dt>

                                <dd>
                                    <span class="mr-sm-5 ml-sm-5 mx-sm-5 text-left">
                                        @Html.DisplayFor(model => model.Content)
                                    </span>
                                </dd>

                                <dt>
                                    @Html.LabelFor(model => model.DateTimeCreated, new { @class = "mr-sm-5 ml-sm-5 mx-sm-5 text-left" })
                                </dt>

                                <dd>
                                    <span class="mr-sm-5 ml-sm-5 mx-sm-5 text-left">
                                        @Html.DisplayFor(model => model.DateTimeCreated)
                                    </span>
                                </dd>

                            </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            
                            <div class=" mt-4">

                                <div class="btn btn-danger   ml-5 mx-5">
                                    <input type="submit" value="Delete" class="btn btn-danger btn-lg btn-block " />
                                </div>
                                
                                <a class="btn btn-primary btn-lg mt-5 my-5 pt-3 py-3" href=@Url.Action("Index")>
                                    <i class="fas fa-arrow-alt-circle-left mr-2" aria-hidden="true"></i>
                                    Back to Article List
                                </a>

                            </div>
                        }

                        </div>
                        </div>
                </div>

            </div>



        </div>
    </section>
</div>



