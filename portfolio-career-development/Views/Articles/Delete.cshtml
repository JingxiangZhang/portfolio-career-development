@model portfolio_career_development.Models.Article

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-5 my-5 pt-3 py-3">
    <section class="page-section" id="articleDelete">
        <div class="container">
            <div class="form-horizontal">
                
                <h4 class="page-section-heading text-center text-uppercase text-secondary mb-0">Are you sure you want to delete this ?</h4>
                <div class="divider-custom">
                    <div class="divider-custom-line"></div>
                    <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                    <div class="divider-custom-line"></div>
                </div>

                <hr />

                <div class="row">
                    <div class="col-lg-12 mx-auto">
                        <div>

                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.LabelFor(model => model.Title, new { @class = "mr-sm-5 ml-sm-5 mx-sm-5 text-left" })
                                </dt>

                                <dd>

                                    <span class="mr-sm-5 ml-sm-5 mx-sm-5 text-left">
                                        @Html.DisplayFor(model => model.Title)
                                    </span>

                                </dd>

                                <dt>
                                    @Html.LabelFor(model => model.Content, new { @class = "mr-sm-5 ml-sm-5 mx-sm-5 text-left" })
                                </dt>

                                <dd>
                                    <span class="mr-sm-5 ml-sm-5 mx-sm-5 text-left">
                                        @Html.DisplayFor(model => model.Content)
                                    </span>
                                </dd>

                                <dt>
                                    @Html.LabelFor(model => model.DateTimeCreated, new { @class = "mr-sm-5 ml-sm-5 mx-sm-5 text-left" })
                                </dt>

                                <dd>
                                    <span class="mr-sm-5 ml-sm-5 mx-sm-5 text-left">
                                        @Html.DisplayFor(model => model.DateTimeCreated)
                                    </span>
                                </dd>

                            </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <button type="submit" class="btn btn-danger btn-lg">
                                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-trash-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5a.5.5 0 0 0-1 0v7a.5.5 0 0 0 1 0v-7z"/>
                                </svg>
                                Delete
                            </button>
                            <a class="btn btn-success btn-lg" href=@Url.Action("Index") role="button">
                                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-left-circle-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-4.5.5a.5.5 0 0 0 0-1H5.707l2.147-2.146a.5.5 0 1 0-.708-.708l-3 3a.5.5 0 0 0 0 .708l3 3a.5.5 0 0 0 .708-.708L5.707 8.5H11.5z"/>
                                </svg>
                                Back to Health News List
                            </a>

                        }

                        </div>
                        </div>
                </div>

            </div>



        </div>
    </section>
</div>



