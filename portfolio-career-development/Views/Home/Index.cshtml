@model portfolio_career_development.ViewModels.ListArticleViewModel
@{
    ViewBag.Title = "Home";
}

<div class="mt-5 my-5">

    <!-- Article Section-->
    <section class="page-section portfolio" id="portfolio">
        <div class="container">
            <!-- Article Section Heading-->
            <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Articles</h2>
            <!-- Icon Divider-->
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                <div class="divider-custom-line"></div>
            </div>
            <!-- Article Grid Items-->
            <div class="row">
                @{
                    int articleCounter = 1;
                }
                @foreach (var article in Model.articles)
                {
                    <div class="col-md-6 col-lg-4 mb-5">
                        <h2 class=" text-center  text-secondary mb-2">Article @articleCounter </h2>
                        <div class="portfolio-item mx-auto" >
                            <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                                <div class="portfolio-item-caption-content text-center text-white"><i class="fas fa-plus fa-3x"></i></div>
                            </div>
                            <img class="img-fluid" src="~/Content/Images/career.png" alt="" />
                        </div>
                    </div>

                    articleCounter += 1;
                }
            </div>
        </div>
    </section>

    <!-- Article Modals-->
    



</div>



